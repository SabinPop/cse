{{!-- The tag below includes the header - partials/header.hbs --}}
{{> header}}

{{#post}}
    <header id="header" class="animated fadeIn"{{#if image}} style="background-image: url({{url image}})"{{/if}}>
        <div class="header-background">
            <section class="blog-content">
                <a id="site-url" class="blog-title" href="{{url}}" data-theme-url="{{theme_url}}">{{@settings.title}}</a>
                <span class="blog-description">{{@settings.description}}</span>
                {{> links}}
            </section>
            <section class="header-content">
                <h1 class="post-title animated fadeInUp">{{{title editable="true"}}}</h1>
                <span class="post-data"><span class="date animated fadeInUp"><i class="fa fa-clock-o"></i> <time class="timesince" data-timesince="{{date format='%s'}}" datetime="{{date format='%Y-%m-%d %H:%M:%S'}}" title="{{date format='%e %B %Y'}}">{{date format="%e %B %Y"}}</time></span>
                    {{#if tags}}<span class="tags animated fadeInUp"><i class="fa fa-tags"></i> {{tags separator=", "}}</span>{{/if}}
                    {{#author}}<span class="author animated fadeInUp"><i class="fa fa-user"></i> <a href="{{author_url}}">{{name}}</a></span>{{/author}}</span>
            </section>
        </div>
    </header>
    <main id="main" class="content">
        <article itemtype="http://schema.org/BlogPosting" class="animated fadeIn content post {{post_class}}">
            <section class="post-content">
                {{content editable="true"}}
            </section>
        </article>
    </main>
{{/post}}

{{!-- The tag below includes the footer - partials/footer.hbs --}}
{{> footer}}