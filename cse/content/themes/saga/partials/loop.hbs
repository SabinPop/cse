<section id="feed" class="feed">
    {{#each posts}}
        <article class="{{post_class}}" style="opacity: 0;">
            {{#if image}}
                <a href="{{post_url}}" class="post-image">
                    <img src="{{url image}}" alt="">
                    <h2 class="post-title">{{{title}}}</h2>
                </a>
            {{else}}
                <h2 class="post-title"><a href="{{post_url}}">{{{title}}}</a></h2>
            {{/if}}
            <section class="post-content">
                {{excerpt words=25}}â€¦
            </section>
            <section class="post-meta">
                <span class="date"><i class="fa fa-clock-o"></i> <a href="{{post_url}}"><time class="timesince" data-timesince="{{date format='%s'}}" datetime="{{date format='%Y-%m-%d %H:%M:%S'}}" title="{{date format='%e %B %Y'}}">{{date format="%e %B %Y"}}</time></a></span>
                {{#author}}
                    <span class="author"><i class="fa fa-user"></i> <a href="{{author_url}}">{{name}}</a></span>
                {{/author}}
                {{#if tags}}
                    <span class="tags"><i class="fa fa-tags"></i>
                        <span>{{tags separator=", "}}</span>
                    </span>
                {{/if}}
            </section>
        </article>
    {{/each}}
</section>
{{> pagination}}