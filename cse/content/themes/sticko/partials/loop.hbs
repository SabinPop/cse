{{#each posts}}
    <article class="post">
        <header class="post-header">
            <h1><a href="{{post_url}}" title="Read &quot;{{title}}&quot;">{{title}}</a></h1>

            <!-- Post meta -->
            {{> post-meta}}
        </header>
        <div class="post-content">
            <p>{{excerpt}}&hellip;</p>
        </div>
        <a href="{{post_url}}" class="button button-default button-keep-reading" title="Read &quot;{{title}}&quot;">Keep reading &rarr;</a>
    </article>
{{/each}}