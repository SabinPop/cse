{{!-- Includes partials/header.hbs --}}
{{> header}}

<article class="{{post_class}}">
{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

  <header class="post-header">
      <h1 class="post-title">{{title editable="true"}}</h1>
      <section class="post-meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="%B %e, %Y"}}</time>.
          By {{#author}}{{name}}{{/author}}.
      </section>
  </header>

  <section class="post-content">
      {{content editable="true"}}
      Tags: {{tags}}
  </section>

  <footer class="post-footer">

  {{! Everything inside the #author tags pulls data from the author }}
  {{#author}}

      {{#if avatar}}
      <figure class="author-image">
          <a class="img" href="{{author_url}}" style="background-image: url({{url avatar}})"><span class="hidden">{{name}}'s Picture</span></a>
      </figure>
      {{/if}}

      <section class="author">
          <h4><a href="{{author_url}}">{{name}}</a></h4>

          {{#if bio}}
              <p>{{bio}}</p>
          {{else}}
              <p>Read <a href="{{author_url}}">more posts</a> by this author.</p>
          {{/if}}
          <div class="author-meta">
              {{#if location}}<span class="author-location">{{location}}</span>{{/if}}
              {{#if website}}<span class="author-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
          </div>
      </section>

  {{/author}}

  </footer>

{{/post}}
</article>


{{!-- Includes partials/footer.hbs --}}
{{> footer}}
