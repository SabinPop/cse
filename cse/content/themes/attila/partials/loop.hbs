<div class="extra-pagination {{#is pagination.current_page '>' 1}}visible{{/is}}">
	{{> pagination}}
</div>

{{#each posts}}

	<article class="{{post_class}}">
		<div class="inner">
			<header class="post-header">
				<h2 class="post-title"><a href="{{post_url}}">{{title}}</a></h2>
				<span class="post-meta">
					{{#author}}
						<a href="{{author_url}}">{{name}}</a>
					{{/author}}
					{{tags before=" on " separator=", "}} |
					<time datetime="{{date format='YYYY-MM-DD'}}">
						{{date format="%d %b %Y"}}
					</time>
				</span>
				<div class="clear"></div>
			</header>

			<section class="post-excerpt">
				<p>{{excerpt}}&hellip;</p>
			</section>
		</div>
	</article>

{{else}}

	<div class="post no-posts">
		<div class="inner">
			<h3>No posts found</h3>
			<p>Try searching again or <a href="{{url}}">browsing the homepage</a></p>
			{{> search_form}}
		</div>
	</div>

{{/each}}

{{> pagination}}