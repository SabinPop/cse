{{> header}}

{{#author}}

	<header id="blog-header"{{#if cover}} class="has-cover"{{else}}{{#if @settings.cover}} class="has-cover"{{/if}}{{/if}}>
		<div class="inner">
			<nav id="navigation">
				{{#if @settings.logo}}
					<span class="blog-logo">
						<a href="{{url}}"><img src="{{url @settings.logo}}" alt="Blog Logo" /></a>
					</span>
				{{else}}
					<span id="home-button" class="nav-button">
						<a class="home-button" href="{{url}}" title="Home"><i class="ic ic-arrow-left"></i> Home</a>
					</span>
				{{/if}}
				{{#if @settings.navigation}}
					<span id="menu-button" class="nav-button">
						<a class="menu-button"><i class="ic ic-menu"></i> Menu</a>
					</span>
				{{/if}}
			</nav>
			{{#if cover}}
				<div class="blog-cover cover" style="background-image: url('{{url cover}}');"></div>
			{{else}}
				{{#if @settings.cover}}
					<div class="blog-cover cover" style="background-image: url('{{url @settings.cover}}');"></div>
				{{/if}}
			{{/if}}
		</div>
	</header>

	<section id="blog-author"{{#if cover}} class="has-cover"{{else}}{{#if @settings.cover}} class="has-cover"{{/if}}{{/if}}>
		<div class="inner">

			<aside class="post-author">
				{{#if avatar}}
					<figure class="post-author-avatar">
						<img src="{{url avatar}}" alt="{{name}}" />
					</figure>
				{{/if}}
				<div class="post-author-bio">
					<h2 class="post-author-name">{{name}}</h2>
					{{#if bio}}
						<p class="post-author-about">{{bio}}</p>
					{{/if}}
					{{#if location}}
						<span class="post-author-location"><i class="ic ic-location"></i> {{location}}</span>
					{{/if}}
					{{#if website}}
						<span class="post-author-website"><a href="{{website}}"><i class="ic ic-link"></i> Website</a></span>
					{{/if}}
					<span class="post-author-stats">
							<i class="ic ic-posts"></i>
							{{plural (number ../pagination.total_items) empty='No posts' singular='% post' plural='% posts'}}
					</span>
				</div>
				<div class="clear"></div>
			</aside>
		</div>
	</section>

{{/author}}

<div id="index" class="container">

	<main class="content" role="main">

		{{> loop}}

	</main>

</div>

{{> footer}}